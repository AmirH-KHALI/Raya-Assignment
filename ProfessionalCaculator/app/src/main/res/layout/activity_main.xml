<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/number_pad"
        android:background="#2C3033">

        <TextView
            android:padding="16dp"
            android:id="@+id/playground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="64dp"
            android:textColor="#fff"
            />

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/number_pad"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".20"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".40"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_line_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".60"
            android:outlineSpotShadowColor="#fff"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_line_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".80"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_line_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".25"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_line_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".5"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_line_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".75"
            />

        <TextView
            android:onClick="number"
            android:id="@+id/number_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guid_line_5"
            app:layout_constraintRight_toRightOf="@id/guid_line_1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="#fff"
            android:textSize="32sp"
            android:text="7"
            android:gravity="center"/>

        <TextView
            android:onClick="number"
            android:id="@+id/number_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guid_line_5"
            app:layout_constraintRight_toRightOf="@id/guid_line_2"
            app:layout_constraintLeft_toLeftOf="@id/guid_line_1"
            android:textColor="#fff"
            android:textSize="32sp"
            android:text="8"
            android:gravity="center"/>

        <TextView
            android:onClick="number"
            android:id="@+id/number_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guid_line_5"
            app:layout_constraintRight_toRightOf="@id/guid_line_3"
            app:layout_constraintLeft_toLeftOf="@id/guid_line_2"
            android:textColor="#fff"
            android:textSize="32sp"
            android:text="9"
            android:gravity="center"/>

        <TextView
            android:onClick="number"
            android:id="@+id/number_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guid_line_5"
            app:layout_constraintBottom_toBottomOf="@id/guid_line_6"
            app:layout_constraintRight_toRightOf="@id/guid_line_1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="#fff"
            android:textSize="32sp"
            android:text="4"
            android:gravity="center"/>

        <TextView
            android:onClick="number"
            android:id="@+id/number_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guid_line_5"
            app:layout_constraintBottom_toBottomOf="@id/guid_line_6"
            app:layout_constraintRight_toRightOf="@id/guid_line_2"
            app:layout_constraintLeft_toLeftOf="@id/guid_line_1"
            android:textColor="#fff"
            android:textSize="32sp"
            android:text="5"
            android:gravity="center"/>

        <TextView
            android:onClick="number"
            android:id="@+id/number_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guid_line_5"
            app:layout_constraintBottom_toBottomOf="@id/guid_line_6"
            app:layout_constraintRight_toRightOf="@id/guid_line_3"
            app:layout_constraintLeft_toLeftOf="@id/guid_line_2"
            android:textColor="#fff"
            android:textSize="32sp"
            android:text="6"
            android:gravity="center"/>

        <TextView
            android:onClick="number"
            android:id="@+id/number_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guid_line_6"
            app:layout_constraintBottom_toBottomOf="@id/guid_line_7"
            app:layout_constraintRight_toRightOf="@id/guid_line_1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="#fff"
            android:textSize="32sp"
            android:text="1"
            android:gravity="center"/>

        <TextView
            android:onClick="number"
            android:id="@+id/number_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guid_line_6"
            app:layout_constraintBottom_toBottomOf="@id/guid_line_7"
            app:layout_constraintRight_toRightOf="@id/guid_line_2"
            app:layout_constraintLeft_toLeftOf="@id/guid_line_1"
            android:textColor="#fff"
            android:textSize="32sp"
            android:text="2"
            android:gravity="center"/>

        <TextView
            android:onClick="number"
            android:id="@+id/number_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guid_line_6"
            app:layout_constraintBottom_toBottomOf="@id/guid_line_7"
            app:layout_constraintRight_toRightOf="@id/guid_line_3"
            app:layout_constraintLeft_toLeftOf="@id/guid_line_2"
            android:textColor="#fff"
            android:textSize="32sp"
            android:text="3"
            android:gravity="center"/>

        <TextView
            android:onClick="number_0"
            android:id="@+id/number_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guid_line_7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/guid_line_1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="#fff"
            android:textSize="32sp"
            android:text="0"
            android:gravity="center"/>

        <TextView
            android:onClick="dot"
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guid_line_7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/guid_line_2"
            app:layout_constraintLeft_toLeftOf="@id/guid_line_1"
            android:textColor="#fff"
            android:textSize="32sp"
            android:text="."
            android:gravity="center"/>

        <ImageView
            android:layout_width=".1dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="@id/guid_line_3"
            android:background="#333"/>

        <TextView
            android:onClick="operator"
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guid_line_5"
            app:layout_constraintRight_toRightOf="@id/guid_line_4"
            app:layout_constraintLeft_toLeftOf="@id/guid_line_3"
            android:textColor="#93ACF2"
            android:textSize="32sp"
            android:text="÷"
            android:gravity="center"/>

        <TextView
            android:onClick="delete"
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guid_line_5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guid_line_4"
            android:textColor="#93ACF2"
            android:textSize="32sp"
            android:text="del"
            android:gravity="center"/>

        <TextView
            android:onClick="operator"
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guid_line_5"
            app:layout_constraintBottom_toBottomOf="@id/guid_line_6"
            app:layout_constraintRight_toRightOf="@id/guid_line_4"
            app:layout_constraintLeft_toLeftOf="@id/guid_line_3"
            android:textColor="#93ACF2"
            android:textSize="32sp"
            android:text="×"
            android:gravity="center"/>

        <TextView
            android:onClick="operator"
            android:id="@+id/subtract"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guid_line_6"
            app:layout_constraintBottom_toBottomOf="@id/guid_line_7"
            app:layout_constraintRight_toRightOf="@id/guid_line_4"
            app:layout_constraintLeft_toLeftOf="@id/guid_line_3"
            android:textColor="#93ACF2"
            android:textSize="32sp"
            android:text="-"
            android:gravity="center"/>

        <TextView
            android:onClick="operator"
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guid_line_7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/guid_line_4"
            app:layout_constraintLeft_toLeftOf="@id/guid_line_3"
            android:textColor="#93ACF2"
            android:textSize="32sp"
            android:text="+"
            android:gravity="center"/>

        <TextView
            android:onClick="equals_sign"
            android:id="@+id/equals_sign"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guid_line_7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guid_line_4"
            android:textColor="#93ACF2"
            android:textSize="32sp"
            android:text="="
            android:gravity="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>